		fontSize: "12sp"
	}
}



/**
 * Using from another controller
 */
 
 <Alloy>
	<Window width="Ti.UI.FILL" height="Ti.UI.FILL" backgroundColor="#fff" fullscreen="true"/>
	<Widget src="com.isiapps.tutorialframe" id="tutorial"/>
</Alloy>


 var page1 = Ti.UI.createView({
        height: Ti.UI.FILL,
